---
import HeroSection from "../components/HeroSection.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

// Comunicados (puedes mantenerlos aquí o centralizarlos luego)
const comunicados = [
  { order: 1, name: "XXIII Asamblea Ordinaria de Representantes de Socios", file: "/comunicados/COMUNICADO 1.jpg" },
  { order: 2, name: "Comunicado Apoyos Vigentes", file: "/comunicados/Comunicado 2.jpg" },
  { order: 3, name: "Aviso Remanente", file: "/comunicados/Aviso 1.jpg" },
];
---

<BaseLayout title="Inicio - CMAP">
  <!-- Fondo general sólido -->
  <div class="min-h-screen">
    <!-- Hero Section (sólido) -->
    <HeroSection />


    <!-- Apps Section -->
    <section class="py-20 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Accede desde cualquier dispositivo
          </h2>
          <p class="text-lg text-gray-600">
            Tu información siempre disponible en la palma de tu mano
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto items-stretch">
          <!-- App Móvil -->
          <div
            class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-[color:var(--color-cmap-verde-600)] flex flex-col h-full"
          >
            <!-- Badge sólido -->
            <div
              class="w-16 h-16 bg-[color:var(--color-cmap-verde-600)] rounded-2xl flex items-center justify-center mb-6 shadow-lg"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                ></path>
              </svg>
            </div>

            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              Aplicación Móvil
            </h3>

            <div class="space-y-4 mb-8">
              <div class="flex items-start gap-3">
                <div
                  class="w-8 h-8 rounded-full flex items-baseline justify-center flex-shrink-0 mt-1"
                >
                  <svg
                    class="w-4 h-4 text-[color:var(--color-cmap-verde-600)]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M9 3.5a5.5 5.5 0 1 0 0 11 5.5 5.5 0 0 0 0-11ZM2 9a7 7 0 1 1 12.452 4.391l3.328 3.329a.75.75 0 1 1-1.06 1.06l-3.329-3.328A7 7 0 0 1 2 9Z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">
                    Consulta tu saldo
                  </h4>
                  <p class="text-sm text-gray-600">
                    Revisa tu saldo e historial de movimientos
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div
                  class="w-8 h-8 rounded-full  flex items-baseline justify-center flex-shrink-0 mt-1"
                >
                  <svg
                    class="w-4 h-4 text-[color:var(--color-cmap-verde-600)]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M10 1c3.866 0 7 1.79 7 4s-3.134 4-7 4-7-1.79-7-4 3.134-4 7-4Zm5.694 8.13c.464-.264.91-.583 1.306-.952V10c0 2.21-3.134 4-7 4s-7-1.79-7-4V8.178c.396.37.842.688 1.306.953C5.838 10.006 7.854 10.5 10 10.5s4.162-.494 5.694-1.37ZM3 13.179V15c0 2.21 3.134 4 7 4s7-1.79 7-4v-1.822c-.396.37-.842.688-1.306.953-1.532.875-3.548 1.369-5.694 1.369s-4.162-.494-5.694-1.37A7.009 7.009 0 0 1 3 13.179Z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">
                    Calculadora de préstamos
                  </h4>
                  <p class="text-sm text-gray-600">
                    Calcula tu próximo préstamo de manera rápida y sencilla
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div
                  class="w-8 h-8 rounded-full  flex items-baseline justify-center flex-shrink-0 mt-1"
                >
                  <svg
                    class="w-4 h-4 text-[color:var(--color-cmap-verde-600)]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"
                    ></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">
                    Notificaciones en tiempo real
                  </h4>
                  <p class="text-sm text-gray-600">
                    Mantente siempre informado
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div
                  class="w-8 h-8 rounded-full  flex items-baseline justify-center flex-shrink-0 mt-1"
                >
                  <svg
                    class="w-4 h-4 text-[color:var(--color-cmap-verde-600)]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">
                    Amigable e intuitiva
                  </h4>
                  <p class="text-sm text-gray-600">
                    Realiza tus tareas con un solo click
                  </p>
                </div>
              </div>
            </div>

            <!-- Botones al fondo -->
            <div class="flex flex-col sm:flex-row gap-3 mt-auto">
              <a
                href="https://apps.apple.com/mx/app/cmap-snte-54/id6443581980"
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-[color:var(--color-cmap-negro-900)] text-white rounded-xl hover:bg-[color:var(--color-cmap-negro-800)] transition-colors font-semibold"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.8 1.18-.24 2.31-.93 3.57-.84 1.51.12 2.65.72 3.4 1.8-3.12 1.87-2.38 5.98.48 7.13-.57 1.5-1.31 2.99-2.54 4.09l.01-.01zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.29 2.58-2.34 4.5-3.74 4.25z"
                  ></path>
                </svg>
                App Store
              </a>
              <a
                href="https://play.google.com/store/apps/details?id=com.grupored.cmap&hl=es_MX"
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-[color:var(--color-cmap-verde-600)] text-white rounded-xl hover:bg-[color:var(--color-cmap-verde-700)] transition-colors font-semibold"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.802 8.99l-2.303 2.303-8.635-8.635z"
                  ></path>
                </svg>
                Play Store
              </a>
            </div>
          </div>

          <!-- Consulta Web -->
          <div
            class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-[color:var(--color-cmap-naranja-500)] flex flex-col h-full"
          >
            <!-- Badge sólido -->
            <div
              class="w-16 h-16 bg-[color:var(--color-cmap-naranja-500)] rounded-2xl flex items-center justify-center mb-6 shadow-lg"
            >
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>

            <h3 class="text-2xl font-bold text-gray-900 mb-4">Página Web</h3>

            <div class="space-y-4 mb-8">
              <div class="flex items-start gap-3">
                <div
                  class="w-8 h-8 rounded-full flex items-baseline justify-center flex-shrink-0 mt-1"
                >
                  <svg
                    class="w-4 h-4 text-[color:var(--color-cmap-naranja-500)]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                    <path
                      fill-rule="evenodd"
                      d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">
                    Revisa tus movimientos
                  </h4>
                  <p class="text-sm text-gray-600">
                    Ten el control de tu cuenta y consulta tus movimientos de
                    manera sencilla
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div
                  class="w-8 h-8 rounded-full flex items-baseline justify-center flex-shrink-0 mt-1"
                >
                  <svg
                    class="w-4 h-4 text-[color:var(--color-cmap-naranja-500)]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">
                    ¿Necesitas un préstamo?
                  </h4>
                  <p class="text-sm text-gray-600">
                    Consulta tu saldo y revisa si cumples con los requisitos
                    para solicitarlo
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div
                  class="w-8 h-8 rounded-full flex items-baseline justify-center flex-shrink-0 mt-1"
                >
                  <svg
                    class="w-4 h-4 text-[color:var(--color-cmap-naranja-500)]"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 mb-1">
                    Descarga tu estado de cuenta
                  </h4>
                  <p class="text-sm text-gray-600">
                    Guarda e imprime tus movimientos con solamente un click
                  </p>
                </div>
              </div>
            </div>

            <!-- Botón al fondo (sólido) -->
            <a
              href="https://app.cmapsnte54.com.mx/CMAP_F2/Identity/Account/Login"
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full text-center px-6 py-3 bg-[color:var(--color-cmap-naranja-500)] text-white rounded-xl hover:bg-[color:var(--color-cmap-naranja-600)] transition-colors font-semibold shadow-lg hover:shadow-xl mt-auto"
            >
              Consulta tu saldo aquí
            </a>
          </div>
        </div>
      </div>
    </section>

        <!-- Últimos comunicados -->
    <section class="px-4">
      <div class="max-w-7xl mx-auto">
        <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4 mb-6">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Últimos comunicados</h2>
            <p class="text-gray-600">Información oficial reciente</p>
          </div>
          </div>

 <!-- Últimos comunicados -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {comunicados.map((c) => (
        <a href={c.file} target="_blank" rel="noopener"
           class="group relative block rounded-2xl overflow-hidden border border-gray-200 shadow-lg hover:shadow-2xl transition-all duration-300">
          <!-- Imagen 3:4 -->
          <div class="relative w-full aspect-[3/4] bg-gray-100">
            <img src={c.file} alt={c.name}
                 class="absolute inset-0 w-full h-full object-cover object-center transition-transform duration-300" />
            <!-- Overlay + boton Ver -->
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/35 transition-colors duration-300"></div>
            <div class="pointer-events-none absolute inset-0 flex items-center justify-center">
              <div class="opacity-0 translate-y-2 scale-95 group-hover:opacity-100 group-hover:translate-y-0 group-hover:scale-100 transition-all duration-300 ease-[cubic-bezier(.2,.7,.2,1)]">
                <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/95 text-gray-900 font-semibold shadow-xl">
                  <!-- ícono “ver” -->
                  Abrir
                </span>
              </div>
            </div>
          </div>
          <!-- Título -->
          <div class="p-4">
            <h3 class="font-bold text-gray-900 line-clamp-2 group-hover:text-[color:var(--color-cmap-verde-700)] transition-colors">
              {c.name}
            </h3>
          </div>
        </a>
      ))}
    </div>

    <div class="mt-10 mb-6 flex justify-center">
      <a href="/documentos"
         class="inline-flex items-center gap-2 px-6 py-3 rounded-2xl font-semibold text-white bg-[color:var(--color-cmap-verde-600)] hover:bg-[color:var(--color-cmap-verde-700)] transition-colors shadow-lg hover:shadow-xl">
        Ver documentos
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

      </div>
    </section>

  </div>
</BaseLayout>
