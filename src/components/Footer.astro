---
// src/components/Footer.astro
---

<footer
    class="relative bg-gradient-to-br from-slate-900 via-blue-950 to-slate-900 border-t border-blue-900/30 mt-16"
>
    <!-- Pattern overlay -->
    <div class="absolute inset-0 opacity-5">
        <div
            class="absolute inset-0"
            style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"
        >
        </div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 py-8">
        <!-- Links Section -->
        <div class="flex flex-wrap justify-center items-center gap-3 mb-6">
            <a
                href="/avisos/Aviso de privacidad.pdf"
                target="_blank"
                rel="noopener noreferrer"
                class="group relative text-gray-300 hover:text-cyan-400 text-sm transition-colors duration-300 px-3 py-1 rounded-lg hover:bg-white/5"
            >
                <span class="relative z-10">Aviso de privacidad</span>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-cyan-500/0 via-cyan-500/5 to-cyan-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"
                >
                </div>
            </a>

            <span class="text-blue-800">•</span>

            <a
                href="/avisos/Aviso de privacidad integral para socios.pdf"
                target="_blank"
                rel="noopener noreferrer"
                class="group relative text-gray-300 hover:text-purple-400 text-sm transition-colors duration-300 px-3 py-1 rounded-lg hover:bg-white/5"
            >
                <span class="relative z-10">Aviso integral para socios</span>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-purple-500/0 via-purple-500/5 to-purple-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"
                >
                </div>
            </a>

            <span class="text-blue-800">•</span>

            <a
                href="/avisos/Aviso de privacidad integral para trabajadores.pdf"
                target="_blank"
                rel="noopener noreferrer"
                class="group relative text-gray-300 hover:text-blue-400 text-sm transition-colors duration-300 px-3 py-1 rounded-lg hover:bg-white/5"
            >
                <span class="relative z-10"
                    >Aviso integral para trabajadores</span
                >
                <div
                    class="absolute inset-0 bg-gradient-to-r from-blue-500/0 via-blue-500/5 to-blue-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"
                >
                </div>
            </a>

            <span class="text-blue-800">•</span>

            <a
                href="/avisos/Aviso de privacidad integral para proveedores.pdf"
                target="_blank"
                rel="noopener noreferrer"
                class="group relative text-gray-300 hover:text-emerald-400 text-sm transition-colors duration-300 px-3 py-1 rounded-lg hover:bg-white/5"
            >
                <span class="relative z-10">Aviso para proveedores</span>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-emerald-500/0 via-emerald-500/5 to-emerald-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"
                >
                </div>
            </a>

            <span class="text-blue-800">•</span>

            <a
                href="/avisos/Derechos arco.pdf"
                target="_blank"
                rel="noopener noreferrer"
                class="group relative text-gray-300 hover:text-zinc-400 text-sm transition-colors duration-300 px-3 py-1 rounded-lg hover:bg-white/5"
            >
                <span class="relative z-10">Ejercer derechos ARCO</span>
                <div
                    class="absolute inset-0 bg-gradient-to-r from-zinc-500/0 via-zinc-500/5 to-zinc-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"
                >
                </div>
            </a>
        </div>

        <!-- Copyright -->
        <div class="text-center pt-6 border-t border-blue-900/30">
            <div
                class="flex items-center justify-center gap-2 text-gray-500 text-xs"
            >
                <span>©</span>
                <span>2018 – {new Date().getFullYear()}</span>
                <span class="text-blue-800">·</span>
                <span class="text-gray-400"
                    >Caja Magisterial de Ahorros y Préstamos</span
                >
                <span
                    class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full bg-blue-500/10 text-orange-400 border border-orange-500/20"
                >
                    <span class="text-xs font-semibold">SNTE 54</span>
                </span>
            </div>
        </div>
    </div>

    <!-- Decorative gradient line -->
    <div
        class="absolute bottom-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-cyan-500/50 to-transparent"
    >
    </div>
</footer>

<style>
    @media (max-width: 768px) {
        footer a {
            font-size: 0.8rem;
        }
    }
</style>
