---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

const {
  title = "CMAP SNTE 54",
  description = "Caja Magisterial de Ahorros y Préstamos de la Sección 54 del SNTE. Servicios financieros, préstamos y programas sociales para docentes de Sonora.",
  ogImage = "/og/cmap-og.jpg", // Recomendado: 1200×630 JPG/PNG
} = Astro.props;

// Canonical absoluto (requiere `site` en astro.config)
const canonical = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : Astro.url.href;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Habilita SPA View Transitions -->
    <ClientRouter />

    <!-- (Opcional) estilos globales -->
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body class="bg-[#f9fafb] text-gray-900">
    <Navbar />

    <!-- En .astro SÍ es válido -->
    <main transition:name="page" class="min-h-[60vh]">
      <slot />
    </main>

    <Footer />
  </body>
</html>
